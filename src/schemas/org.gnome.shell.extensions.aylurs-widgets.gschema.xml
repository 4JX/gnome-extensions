<?xml version="1.0" encoding="UTF-8"?>
<schemalist>

  <schema id="org.gnome.shell.extensions.aylurs-widgets"
    path="/org/gnome/shell/extensions/aylurs-widgets/">

    <!-- enables -->
    <key name="battery-bar" type="b">
      <default>true</default>
    </key>
    <key name="dash-board" type="b">
      <default>true</default>
    </key>
    <key name="date-menu-mod" type="b">
      <default>true</default>
    </key>
    <key name="media-player" type="b">
      <default>true</default>
    </key>
    <key name="power-menu" type="b">
      <default>true</default>
    </key>
    <key name="workspace-indicator" type="b">
      <default>true</default>
    </key>
    <key name="quick-toggles" type="b">
      <default>true</default>
    </key>
    <key name="notification-indicator" type="b">
      <default>true</default>
    </key>
    <key name="background-clock" type="b">
      <default>true</default>
    </key>


    <!-- batter-bar -->
    <key name="battery-bar-position" type="i">
      <default>2</default>
    </key>

    <key name="battery-bar-offset" type="i">
      <default>0</default>
    </key>

    <key name="battery-bar-show-icon" type="b">
      <default>true</default>
    </key>

    <key name="battery-bar-icon-position" type="i">
      <default>0</default>
    </key>

    <key name="battery-bar-show-percentage" type="b">
      <default>true</default>
    </key>

    <key name="battery-bar-width" type="i">
      <default>200</default>
    </key>

    <!-- dash -->
    <key name="dash-button-hide" type="b">
      <default>false</default>
    </key>

    <key name="dash-replace-activities-button" type="b">
      <default>false</default> 
    </key>

    <key name="dash-button-position" type="i">
      <default>0</default> 
    </key>

    <key name="dash-button-offset" type="i">
      <default>0</default> 
    </key>

    <key name="dash-button-label" type="s">
      <default>"Dash"</default>
    </key>

    <key name="dash-button-icon-path" type="s">
      <default>""</default>
    </key>

    <key name="dash-button-icon-hide" type="b">
      <default>true</default>
    </key>

    <key name="dash-shortcut" type="as">
      <default><![CDATA[['<Super>d']]]></default>
    </key>

    <key name="dash-layout" type="i">
      <default>1</default>
    </key>

    <key name="dash-link-names" type="as">
      <default>['reddit', 'youtube', 'gmail', 'twitter', 'github']</default>
      <description>needs shell reload for this</description>
    </key>

    <key name="dash-link-urls" type="as">
      <default>['https://www.reddit.com/', 'https://www.youtube.com/', 'https://www.gmail.com/', 'https://twitter.com/', 'https://www.github.com/']</default>
      <description>needs shell reload for this</description>
    </key>

    <key name="dash-apps-rows" type="i">
      <default>3</default>
    </key>

    <key name="dash-apps-cols" type="i">
      <default>3</default>
    </key>
    
    <key name="dash-app-icon-size" type="i">
      <default>42</default>
    </key>

    <!-- date-menu-mod -->
    <key name="date-menu-remove-padding" type="b">
      <default>true</default> 
    </key>

    <key name="date-menu-indicator-position" type="i">
      <default>1</default> 
    </key>

    <key name="date-menu-date-format" type="s">
      <default>"%H:%M | %a:%d"</default> 
    </key>

    <key name="date-menu-mirror" type="b">
      <default>false</default> 
    </key>

    <key name="date-menu-hide-notifications" type="b">
      <default>false</default> 
    </key>

    <key name="date-menu-custom-menu" type="b">
      <default>true</default>
    </key>

    <key name="date-menu-hide-events" type="b">
      <default>false</default>
    </key>

    <key name="date-menu-hide-clocks" type="b">
      <default>false</default>
    </key>

    <key name="date-menu-hide-weather" type="b">
      <default>false</default>
    </key>

    <key name="date-menu-hide-media" type="b">
      <default>false</default>
    </key>

    <key name="date-menu-hide-system-levels" type="b">
      <default>false</default>
    </key>

    <key name="date-menu-hide-user" type="b">
      <default>false</default>
    </key>

    <!-- media-player -->
    <key name="media-player-position" type="i">
      <default>1</default> 
    </key>

    <key name="media-player-offset" type="i">
      <default>0</default> 
    </key>

    <key name="media-player-prefer" type="s">
      <default>"spotify"</default> 
    </key>

    <key name="media-player-layout" type="i">
      <default>0</default> 
    </key>

    <key name="media-player-controls-position" type="i">
      <default>1</default> 
    </key>

    <key name="media-player-controls-offset" type="i">
      <default>0</default> 
    </key>

    <key name="media-player-hide-controls" type="b">
      <default>false</default> 
    </key>

    <key name="media-player-max-width" type="i">
      <default>0</default> 
    </key>

    <key name="media-player-hide-track" type="b">
      <default>false</default>
    </key>

    <!-- power-menu -->
    <key name="power-menu-position" type="i">
      <default>0</default> 
    </key>
    
    <key name="power-menu-layout" type="i">
      <default>0</default> 
    </key>

    <key name="power-menu-style" type="i">
      <default>0</default> 
    </key>

    <!-- workspace-indicator -->
    <key name="workspace-indicator-position" type="i">
      <default>0</default>
    </key>

    <key name="workspace-indicator-offset" type="i">
      <default>2</default> 
    </key>

    <key name="workspace-indicator-show-names" type="b">
      <default>false</default> 
    </key>

    <!-- quick-toggles -->
    <key name="quick-toggles-style" type="i">
      <default>0</default>
    </key>

    <key name="quick-toggles-hide-notifications" type="b">
      <default>false</default>
    </key>

    <key name="quick-toggles-hide-system-levels" type="b">
      <default>false</default>
    </key>

    <key name="quick-toggles-hide-media" type="b">
      <default>false</default>
    </key>

    <!-- notification-indicator -->
    <key name="notification-indicator-position" type="i">
      <default>0</default>
    </key>

    <key name="notification-indicator-offset" type="i">
      <default>0</default>
    </key>

    <key name="notification-indicator-hide-on-zero" type="b">
      <default>true</default>
    </key>

    <key name="notification-indicator-menu-width" type="i">
      <default>500</default>
    </key>

    <key name="notification-indicator-hide-counter" type="b">
      <default>false</default>
    </key>

    <!-- background-clock -->
    <key name="background-clock-position" type="i">
      <default>8</default>
    </key>

    <key name="background-clock-offset" type="i">
      <default>24</default>
    </key>

    <key name="background-clock-clock-size" type="i">
      <default>36</default>
    </key>

    <key name="background-clock-date-size" type="i">
      <default>30</default>
    </key>

    <key name="background-clock-color" type="s">
      <default>"#fff"</default>
    </key>

    <key name="background-clock-other-css" type="s">
      <default>"text-shadow: 0 0 1px black"</default>
    </key>

    <key name="background-clock-clock-format" type="s">
      <default>"%H:%M"</default>
      <description>
        M - minutes 00-59
        H - hour 00-23
        I - hour 01-12
        k - hour 0-23
        l - hour 1-12
        p - AM PM
        P - am pm

        n - newline
      </description>
    </key>

    <key name="background-clock-date-format" type="s">
      <default>"%A %b"</default>
      <description>
        a - weekday abr
        A - weekday name
        b - monthname abr
        B - monthname name
        C - century 00-99
        d - day 01-31
        e - day 1-31
        Y - year 2000
        m - month 01-12
        j - day of year 001-366

        n - newline
      </description>
    </key>

  </schema>
</schemalist>
